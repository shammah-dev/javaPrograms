package javaPracticePrograms;

import java.util.Arrays;

//Write a method that will take a string as an argument. The method will reverse the position of words and return it.

public class ReverseWordsOfSentence {

	public static void main(String[] args) {
		String sentence="My name is Eclipse";
		String[] arrayOfSen= sentence.split("\\s");
		String[] arrayOfRev=new String[arrayOfSen.length];
		int j=0;
		for(int i=arrayOfSen.length-1;i>=0;i--) {
			arrayOfRev[j]=arrayOfSen[i];
			j++;
		}
		String rev=String.valueOf(arrayOfRev);
		System.out.println(rev);
	}
}
